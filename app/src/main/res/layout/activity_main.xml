<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_above="@+id/table_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_spacer"
                android:layout_width="14dp"
                android:layout_height="36dp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/button_1s_complement"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:text="1s COMP" />

            <Button
                android:id="@+id/button_2s_complement"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:text="2s COMP" />

            <Button
                android:id="@+id/button_float_single"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:text="SINGLE" />

            <Button
                android:id="@+id/button_float_double"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:text="DOUBLE" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/table_buttons"
        android:layout_width="380dp"
        android:layout_height="254dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_shift_left"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="ShL" />

            <Button
                android:id="@+id/button_shift_right"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="ShR" />

            <Button
                android:id="@+id/button_rotate_left"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="RoL" />

            <Button
                android:id="@+id/button_rotate_right"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="RoR" />

            <Button
                android:id="@+id/button_word_size"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="QUAD" />

            <Button
                android:id="@+id/button_bits"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="BITS" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_and"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="AND" />

            <Button
                android:id="@+id/button_or"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="OR" />

            <Button
                android:id="@+id/button_xor"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="XOR" />

            <Button
                android:id="@+id/button_mem_store"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="MS" />

            <Button
                android:id="@+id/button_mem_add"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="M+" />

            <Button
                android:id="@+id/button_mem_recall"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="MR" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_complement"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="~" />

            <Button
                android:id="@+id/button_modulus"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="Mod" />

            <Button
                android:id="@+id/button_clear_entry"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="CE" />

            <Button
                android:id="@+id/button_clear_all"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="C" />

            <ImageButton
                android:id="@+id/imageButton_backspace"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/index" />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_A"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="A" />

            <Button
                android:id="@+id/button_B"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="B" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="7" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="8" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="9" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="X" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_C"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="C" />

            <Button
                android:id="@+id/button_D"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="D" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="4" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="5" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="6" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_E"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="E" />

            <Button
                android:id="@+id/button_F"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="F" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="1" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="2" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="3" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_open_paren"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="(" />

            <Button
                android:id="@+id/button_close_paren"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text=")" />

            <Button
                android:id="@+id/button_sign"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="+/-" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="0" />

            <Button
                android:id="@+id/button_radix"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="." />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="62dp"
                android:layout_height="36dp"
                android:text="=" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="375dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView_title"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:gravity="right|center_vertical"
        android:inputType="none"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:scrollHorizontally="true"
        android:text="1F8"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:text="  Programmer's Calculator"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TableLayout
        android:layout_width="378dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:stretchColumns="1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="74dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="0dp"
            android:padding="0dp">

            <TextView
                android:id="@+id/tv_hex_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEX"
                android:textSize="24sp"
                android:clickable="true"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tv_hex_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text="1F8" />

            </HorizontalScrollView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_decimal_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEC"
                android:textSize="24sp"
                android:clickable="true"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tv_decimal_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text="1F8" />

            </HorizontalScrollView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_octal_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OCT"
                android:textSize="24sp"
                android:clickable="true"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tv_octal_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text="1F8" />

            </HorizontalScrollView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_binary_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="BIN"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_1s_mode_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="12dp"
                android:text="upper"
                android:textSize="24sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tv_binary_upper_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text="1F8" />

            </HorizontalScrollView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:id="@+id/tv_2s_mode_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="lower"
                android:textSize="24sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/tv_binary_lower_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text="1F8" />

            </HorizontalScrollView>

        </TableRow>

    </TableLayout>

</RelativeLayout>